rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is the document owner
    function isDocumentOwner() {
      return isAuthenticated() && request.auth.uid == resource.data.user_id;
    }

    // Users collection
    match /users/{userId} {
      // Users can only read and write their own document
      allow read, write: if isOwner(userId);
    }

    // PTO Settings collection
    match /ptoSettings/{settingsId} {
      // Users can read their own settings
      allow read: if isDocumentOwner();
      // Users can create settings for themselves
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      // Users can update/delete their own settings
      allow update, delete: if isDocumentOwner();
    }

    // PTO Accrual Rules collection
    match /ptoAccrualRules/{ruleId} {
      allow read: if isDocumentOwner();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isDocumentOwner();
    }

    // PTO Days collection
    match /ptoDays/{dayId} {
      allow read: if isDocumentOwner();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isDocumentOwner();
    }

    // Custom Holidays collection
    match /customHolidays/{holidayId} {
      allow read: if isDocumentOwner();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isDocumentOwner();
    }

    // Weekend Config collection
    match /weekendConfig/{configId} {
      allow read: if isDocumentOwner();
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isDocumentOwner();
    }
  }
}
